div#<%=name%>
{
 margin: 2em;
 background: <%=body_color%> url(/images/<%=name%>/top-left.gif) no-repeat;
}

div#<%=name%> h2
{
 margin: 0;
 padding: <%=radius%>px <%=radius%>px 0 <%=radius%>px;
 background: url(/images/<%=name%>/top-right.gif) no-repeat 100% 0;
}

div#<%=name%> p
{
padding: 0 <%=radius%>px;
}

div#<%=name%> p.more
{
 padding: 0 0 0 <%=radius%>px;
 background: url(/images/<%=name%>/bot-left.gif) no-repeat 0 100%;
}

div#<%=name%> p.more a
{
 display: block;
 padding: 0 <%=radius%>px <%=radius%>px 0;
 text-align: right;
 background: url(/images/<%=name%>/bot-right.gif) no-repeat 100% 100%;
}